<%= form_for(@task) do |form| %>
    <%= form.label :Title %>
    <%= form.text_field :title %>

    <%= form.label :Details %>
    <%= form.text_field :details %>

    <% unless @task.new_record?  %>
        <%= form.label :Completed %> 
        <%= form.check_box :completed %> 
    <% end %>

    <%= form.submit %>
<% end %>
